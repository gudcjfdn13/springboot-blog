<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hci.blog.springboot.dao.ArticleDao">
	<!-- getArticles -->
	<select id="getArticles" resultType="Article">
		SELECT *
		FROM `article`
		ORDER BY id DESC
	</select>

	<!-- getArticle -->
	<select id="getArticle" resultType="Article">
		SELECT *
		FROM `article`
		WHERE id = #{id}
	</select>
	
	<!-- doWrite -->
	<insert id="doWrite" keyProperty="id" useGeneratedKeys="true">
	insert into `article`
	<set>
	regDate = NOW(),
	updateDate = NOW(),
	`title` = #{title},
	`body` = #{body},
	</set>
	</insert>
	
	<!-- doModify -->
	<update id="doModify">
	UPDATE `article`
	<set>
	updateDate = NOW(),
	`title` = #{title},
	`body` = #{body},
	</set>
	WHERE id = #{id}
	</update>
	
	<!-- doDelete -->
	<delete id="doDelete">
	DELETE FROM `article`
	WHERE id = #{id}
	</delete>
</mapper>